{
  "name": "uvault",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "npm run compile && npm run types",
    "compile": "truffle compile",
    "ethlint": "solium -d contracts --fix",
    "lint": "prettier --write contracts/*.sol contracts/**/*.sol",
    "lint:check": "prettier --check contracts/*.sol contracts/**/*.sol",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:unit": "npm run typecheck && truffle test test/unit/**/test-*.ts",
    "test:integration": "npm run typecheck && truffle test test/integration/test-*.ts",
    "types": "typechain --target=truffle-v5 --outDir types 'build/contracts/*.json'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^2.5.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stakewithus/uvault.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stakewithus/uvault/issues"
  },
  "homepage": "https://github.com/stakewithus/uvault#readme",
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.7",
    "@nomiclabs/buidler-ethers": "^2.0.2",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@typechain/truffle-v5": "^2.0.2",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.13",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "@types/web3": "^1.2.2",
    "bn.js": "^5.1.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eth-gas-reporter": "^0.2.17",
    "ethers": "^5.0.17",
    "ethlint": "^1.2.5",
    "ganache-cli": "^6.11.0",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.58",
    "truffle": "5.1.47",
    "ts-node": "^9.0.0",
    "typechain": "^3.0.0",
    "typescript": "^4.0.3"
  }
}
