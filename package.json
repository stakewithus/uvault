{
  "name": "uvault",
  "version": "1.0.0",
  "description": "",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "postinstall": "npm run compile && npm run types",
    "compile": "truffle compile",
    "clean": "rm -rf cache artifacts build",
    "solhint": "solhint 'contracts/**/*.sol'",
    "lint": "prettier --write contracts/*.sol contracts/**/*.sol",
    "lint:check": "prettier --check contracts/*.sol contracts/**/*.sol",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:unit": "npm run typecheck && truffle test test/unit/**/test-*.ts",
    "test:integration": "npm run typecheck && truffle test test/integration/test-*.ts",
    "types": "typechain --target=truffle-v5 --outDir types 'build/contracts/*.json'",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stakewithus/uvault.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/stakewithus/uvault/issues"
  },
  "homepage": "https://github.com/stakewithus/uvault#readme",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^2.1.0",
    "@openzeppelin/test-helpers": "^0.5.10",
    "@typechain/truffle-v5": "^4.0.0",
    "@types/bn.js": "^4.11.6",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.20",
    "@types/web3": "^1.2.2",
    "bn.js": "^5.1.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eth-gas-reporter": "^0.2.20",
    "ethers": "^5.0.24",
    "ganache-cli": "^6.12.1",
    "hardhat": "^2.0.7",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.3",
    "solhint": "^3.3.2",
    "truffle": "5.1.60",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3"
  }
}
